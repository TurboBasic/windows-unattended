# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file   
root = true
   
     
[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true  


[*.{js,html,md,ps1,py,txt}]
# Set default charset
charset = utf-8


[*.py]
# 4 space indentation
indent_style = space
indent_size = 4 
trim_trailing_whitespace = true  
